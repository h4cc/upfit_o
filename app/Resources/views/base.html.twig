<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Upfit{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <!-- style -->
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>
    {% block stylesheets %}
    {% stylesheets '@BpaulinUpfitBundle/Resources/public/bootstrap/css/bootstrap.min.css'
                    '@BpaulinUpfitBundle/Resources/public/bootstrap/css/bootstrap-responsive.min.css'
                     filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% endblock %}
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('upfit_home') }}">Upfit</a>
          <ul class="nav pull-right">
            <li class="dropdown">
            {% if app.user.username is defined %}
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <img src='{{ app.user.gravatarUrl(24) }}'/>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><a href="{{ path('fos_user_security_logout') }}">Me déconnecter</a></li>
                <li><a href="{{ path('fos_user_profile_edit') }}">Modifier mon profil</a></li>
                <li><a href="{{ path('fos_user_change_password') }}">Changer mon mot de passe</a></li>
              </ul>
            {% else %}
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Mon espace
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><a href="{{ path('fos_user_security_login') }}">M'identifier</a></li>
                <li><a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}">Créer mon compte</a></li>
              </ul>
            {% endif %}
            </li>
          </ul>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li><a href="https://github.com/bpaulin/upfit" target='_blank'>Github</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div><!-- navbar -->

    <div class="container-fluid">
      <div class="row-fluid">
      {% if app.session.hasFlash('error') %}
          <div class="alert-error">
              {{ app.session.flash('error') }}
          </div>
      {% endif %}
      {% if app.session.hasFlash('success') %}
          <div class="alert-success">
              {{ app.session.flash('success') }}
          </div>
      {% endif %}
    {% block body %}
    {% endblock %}
      </div>

      <hr>

      <footer>
        <p>&copy; Company 2012</p>
      </footer>
    </div><!-- container -->

    {% block javascripts %}
    {% javascripts '@BpaulinUpfitBundle/Resources/public/jquery/jquery-1.8.3.min.js'
                   '@BpaulinUpfitBundle/Resources/public/bootstrap/js/bootstrap.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% endblock %}
  </body>
</html>
